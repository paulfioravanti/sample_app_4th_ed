<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user, button_text: "Save changes" %>

    <div class="gravatar-edit">
      <%= @user.gravatar_image %>
      <%= link_to "change",
                  "http://gravatar.com/emails",
                  target: "_blank",
                  rel: "noopener" %>
    </div>
  </div>
</div>
